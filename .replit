modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["gildas"]

[deployment]
deploymentTarget = "static"
publicDir = "public"
run = ["sh", "-c", "npm run start"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Run Development Server"

[[workflows.workflow]]
name = "Deploy Readiness Check"
